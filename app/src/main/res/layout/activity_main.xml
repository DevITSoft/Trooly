<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagefundo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/bkg_trooly"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="216dp" />

    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="412dp"
        android:layout_height="275dp"
        android:contentDescription="TODO"
        android:src="@drawable/logo_trooly"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="133dp" />

    <EditText
        android:id="@+id/email_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:hint="@string/e_mail"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="364dp" />

    <EditText
        android:id="@+id/senha_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:hint="@string/senha"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="408dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ou entre com:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#ffff"
        android:textSize="26dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="506dp" />

    <ImageView
        android:id="@+id/ico_face"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/face"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="561dp" />

    <ImageView
        android:id="@+id/ico_google"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/google"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="561dp" />

</androidx.constraintlayout.widget.ConstraintLayout>